<div class="container">
  <div class="row">
    <div class="col-lg-6 landing-left">
      <div class="dummy-phone">
        <div class="screen-shot">
          <div class="carousel carousel-fade" data-ride="courousel">
            <div class="carousel-inner">
            <div class="carousel-item active">
              <%= image_tag "instagramphone.png", height: '427', width: '240'%>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col lg-6 landing-right text-center d-flex align-items-center">
      <div>
      <div class="form-login box">
        <h3 class="word-logo brand-name-img hide-text">Sign up</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: 'Name' %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Passoword' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Comfirm password', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div class="redirect-link box">
        <%= render "devise/shared/links" %> 
      </div>
      </div>
    </div>
  </div>
</div>
